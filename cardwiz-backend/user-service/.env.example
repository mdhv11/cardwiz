# User service local environment
# Prefer using `../.env` for shared settings; this file can override per service.

SERVER_PORT=8081
DB_USERNAME=cardwiz_user
DB_PASSWORD=cardwiz_pass

EUREKA_SERVER=http://service-registry:8761/eureka/

# Must be a Base64-encoded key for HS256
JWT_SECRET=REPLACE_WITH_BASE64_SECRET
JWT_EXPIRATION=86400000

AWS_S3_ENABLED=true
AWS_S3_REGION=ap-south-1
AWS_S3_BUCKET_NAME=cardwiz-profile-images
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=
AWS_S3_ENDPOINT=

AI_SERVICE_URL=http://ai-service:8000
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=5MB
